---
export interface Props {
	date: Date;
	locale?: string
}

const { date } = Astro.props;
const locale = Astro.props.locale || 'en-us';
---

<time class="text-sm" datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>